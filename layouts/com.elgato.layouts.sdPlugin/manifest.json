{
	"$schema": "https://schemas.elgato.com/streamdeck/plugins/manifest.json",
	"Name": "Layouts",
	"Version": "0.1.0.0",
	"Author": "Elgato",
	"URL": "https://github.com/elgatosf/streamdeck-plugin-samples/tree/main/layouts",
	"Actions": [
		{
			"Name": "Layout",
			"UUID": "com.elgato.layouts.layout",
			"Icon": "imgs/actions/layout/layout",
			"Tooltip": "Demonstrates switching to different layouts.",
			"Controllers": ["Encoder"],
			"States": [
				{
					"Image": "imgs/actions/layout/layout",
					"TitleAlignment": "middle",
					"Title": "Layout $X1"
				}
			],
			"Encoder": {
				"layout": "$X1"
			}
		},
		{
			"Name": "Feedback",
			"UUID": "com.elgato.layouts.feedback",
			"Icon": "imgs/actions/feedback/rotate",
			"Tooltip": "Demonstrates updating layout items.",
			"Controllers": ["Encoder"],
			"States": [
				{
					"Image": "imgs/actions/feedback/rotate"
				}
			],
			"Encoder": {
				"layout": "$B1"
			}
		}
	],
	"Category": "Layouts",
	"CategoryIcon": "imgs/plugin/category-icon",
	"CodePath": "bin/plugin.js",
	"Description": "A plugin to demonstate encoder layouts.",
	"Icon": "imgs/plugin/marketplace",
	"SDKVersion": 2,
	"Software": {
		"MinimumVersion": "6.5"
	},
	"OS": [
		{
			"Platform": "mac",
			"MinimumVersion": "10.15"
		},
		{
			"Platform": "windows",
			"MinimumVersion": "10"
		}
	],
	"Nodejs": {
		"Version": "20",
		"Debug": "--inspect=127.0.0.1:12349"
	},
	"UUID": "com.elgato.layouts"
}
